{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      }
    },
    "addressSpace": {
      "type": "array",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "dnsserverip": {
      "type": "array",
      "defaultvalue": [],
      "metadata": {
        "description": "List of dns servers ip"
      }
    },
    "subnets": {
      "type": "array",
      "metadata": {
        "description": "List of subnets and lts address prefix"
      }
    }
  },
  "variables": {
    "subnetlists": {
      "copy": [
        {
          "name": "subnetLoop",
          "count": "[length(parameters('subnets'))]",
          "input": {
            "name": "[parameters('subnets')[copyIndex('subnetLoop')].Name]",
            "properties": {
              "addressPrefix": "[parameters('subnets')[copyIndex('subnetLoop')].addressPrefix]",
              "routeTable": "[parameters('subnets')[copyIndex('subnetLoop')].routeTable]",
              "networkSecurityGroup": "[parameters('subnets')[copyIndex('subnetLoop')].networkSecurityGroup]"
            }
          }
        }
      ]
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-05-01",
      "name": "[parameters('name')]",
      "location": "norwayeast",
      "properties": {
        "addressSpace": {
          "addressPrefixes": "[parameters('addressSpace')]"
        },
        "dhcpOptions": {
          "dnsServers": "[parameters('dnsServerip')]"
        },
        "subnets": "[variables('subnetlists').subnetLoop]"
      }
    }
  ]
}